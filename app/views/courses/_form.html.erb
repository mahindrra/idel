

  <%#= 
  <%#= f.input :name,label:'Course Name' %>
  <%#= f.input :duration,label:'Course Duration' %>
  <%#= f.input :audience %>
  <%#= f.input :course_objective %>
  <%#= f.input :no_of_objective,label:'Total No of Objective' %>
  <%#= f.input :session,label:'No of session' %>
  <%#= f.input :skill_based,label:'No of Skill based Objective' %>
  <%#= f.input :knowledge_based,label:'No of knowledge based Objective' %>
  <%#= f.association :user %>
  <%#= f.association :learner_style %>



  <div class="container">
   <%= form_for(@course) do |f| %>
   <div class="row">
    <div class="col-sm-6">
      <div class="form-group row">
        <%= f.label :name, class:"col-sm-2 col-form-label"%>
        <div class="col-sm-10">
          <%=f.text_field :name, class:"form-control",placeholder:'Course Name' %>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="form-group row">
        <%= f.label :course_objective, class:"col-sm-4 col-form-label"%>
        <div class="col-sm-8">
          <%=f.text_area :course_objective, class:"form-control",placeholder:'Add here course Objective' %>
        </div>
      </div>  

    </div>
  </div>    
  
  <div class="row">
    <div class="col-sm-6">
      <div class="form-group row">
        <%= f.label :duration,'Duration', class:"col-sm-2 col-form-label"%>
        <div class="col-sm-10">
          <%=f.text_field :duration, class:"form-control",placeholder:'Durations in minutes' %>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="form-group row">
        <%= f.label :no_of_objective,'No of Objective', class:"col-sm-4 col-form-label"%>
        <div class="col-sm-8">
          <%=f.text_field :no_of_objective, class:"form-control",placeholder:'Total No of Objective' %>
        </div>
      </div>
    </div>
  </div>
  <div style="margin-top: 20px;"></div>
  <div class="row">
    <div class="col-sm-6">
      <div class="form-group row">
        <%= f.label :session,'Lesson', class:"col-sm-2 col-form-label"%>
        <div class="col-sm-10">
          <%=f.text_field :session, class:"form-control",placeholder:'Number of lesson' %>
        </div>
      </div>
    </div>

    <div class="col-sm-6">  
      <div class="form-group row">
        <%= f.label :skill_based,'No of Skill based Objective', class:"col-sm-6 col-form-label"%>
        <div class="col-sm-6">
          <%=f.text_field :skill_based, class:"form-control",placeholder:'No of Skill based Objective' %>
        </div>
      </div>
    </div>
  </div> 
  <div style="margin-top: 20px;"></div>
  <div class="row">
  <div class="col-sm-6"> 
      <div class="form-group row">
        <%= f.label :audience, class:"col-sm-2 col-form-label"%>
        <div class="col-sm-10">
          <%=f.select :audience, Course.audiences.keys { |key, value| [key.humanize, key] },{},class:"form-control"%>
        </div>
      </div>
    </div>
    <div class="col-sm-6">  
      <div class="form-group row">
        <%= f.label :knowledge_based,'No of knowledge based Objective', class:"col-sm-6 col-form-label"%>
        <div class="col-sm-6">
          <%=f.text_field :knowledge_based, class:"form-control",placeholder:'No of knowledge based Objective' %>
        </div>
      </div>
    </div>
  </div>
  <div style="margin-top: 20px;"></div>
  <div class="row">
  <div class="col-sm-6"> 
      <div class="form-group row">
        <%= f.label :learner_style,'Learner', class:"col-sm-2 col-form-label"%>
        <div class="col-sm-10">
          <%=f.select :learner_style, LearnerStyle.all.collect { |ls| [ls.name, ls.id] },{},class:"form-control"%>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
    <%=f.submit 'Save',class:'btn btn-primary'%> 
    </div>
   </div> 
  <%end%>
</div>
<script type="text/javascript">
  $().ready(function() {
    // validate the comment form when it is submitted
    $("#new_course").validate({
      rules:{
        'course[name]':'required',
        'course[course_objective]':'required',
        'course[duration]':{
          required: true,
          number: true
        },
        'course[no_of_objective]':{
           required: true,
          number: true
        },
        'course[session]':{
           required: true,
          number: true
        },
        'course[skill_based]':{
           required: true,
          number: true
        },
        'course[knowledge_based]':{
           required: true,
          number: true
        }
        
      }
    });
  });
</script>
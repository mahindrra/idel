<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Duration</th>
      <th>Audience</th>
      <th>Course objective</th>
      <th>No of objective</th>
      <th>Session</th>
      <th>Skill based</th>
      <th>Knowledge based</th>
      <th>User</th>
      <th>Learner style</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.duration %></td>
        <td><%= course.audience %></td>
        <td><%= course.course_objective %></td>
        <td><%= course.no_of_objective %></td>
        <td><%= course.session %></td>
        <td><%= course.skill_based %></td>
        <td><%= course.knowledge_based %></td>
        <td><%= course.user %></td>
        <td><%= course.learner_style %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path %>

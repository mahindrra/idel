<div class="container">
<h1>Courses</h1>


<%= link_to 'New Course', new_course_path, class:'btn btn-primary pull-8' %><br>
<hr>

<div class="row">
  <% @courses.each do |course| %>
  <div class="col-sm-4">
    <div class="card">
      <div class="card-block">
      <h3 class="card-title"><%=course.name%></h3>
        <p class="card-text"><%=course.course_objective%></p>
        <%= link_to 'Show', course ,class:'btn btn-primary'%>
        <%= link_to 'Add Objectives', new_objective_path(id:course.id) ,class:'btn btn-primary'%>
      </div>
    </div>
  </div>
  <%end%>
</div>
</div>
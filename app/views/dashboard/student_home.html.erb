<div class="row" style="margin-top: 30px;">
	<div class="col-lg-1"></div>
	<% if @show_questions_flag%>
		<div class="col-lg-10">
		<h4>Test Your Learning Style</h4>
		<hr>
		<strong>Directions:</strong><br>
		<code>
		For each of the 11 questions below select either "a" or
		"b" to indicate your answer. Please choose only one answer
		for each question. If both "a" and "b" seem to
		apply to you, choose the one that applies more frequently. When you
		are finished selecting answers to each question please select the
		submit button at the end of the form.
		</code>
		<hr>
			<%= simple_form_for(current_user,url: dashboard_test_path,method:'POST') do |f| %>
			  <%= f.error_notification %>
			   <ol>
				  <% @questions.each_with_index do |question,index| %>
				   <li><%=question.name%><br>
	                    <input type="radio" name="user[test][q<%=index+1%>]" value="a">
	                    &nbsp; <b>(a)</b> &nbsp;<%=question.answer_a%> <br>
	                    <input type="radio"  name="user[test][q<%=index+1%>]" value="b">
	                    &nbsp; <b>(b)</b>&nbsp;<%=question.answer_b%>
	                    <p></p>
	                </li>
				  <%end%>
				</ol>  
			  <div class="form-actions">
			  	<%= f.hidden_field :id,value:current_user.id%>
			    <%= f.button :submit,'Submit',class:'btn-primary' %>
			  </div>
			<% end %>
		</div>
		
	<%else%>
	<div class="col-lg-10">
		Course content data goes here
	</div>	
	<%end%>
	<div class="col-lg-1"></div>
</div>		

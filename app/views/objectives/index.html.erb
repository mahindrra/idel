
<h1>Objectives</h1>

<table class="table">
  <thead>
    <tr>
      <th>Course Name</th>
      <th>Objective Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @objectives.each do |objective| %>
      <tr>
        <td><%= objective.course.name %></td>
        <td><%= objective.name %></td>
        <td><%= link_to 'Add Lesson',new_objective_lesson_path(objective) %></td>

        <td><%= link_to 'Show Lesson',objective_lessons_path(objective) %></td>
        <td><%= link_to 'Edit', edit_objective_path(objective) %></td>
        <td><%= link_to 'Destroy', objective, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Objective', new_objective_path %>
